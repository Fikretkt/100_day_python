import art
print (art.logo)


def add(a,b):
    return a + b
def sub(a,b):
    return a - b
def div(a,b):
    return a / b
def multi(a,b):
    return a * b
islemler = {"+" : add,
            "-" : sub,
            "/" : div,
            "*" : multi
            }

sayi_1 =  float(input("bir sayi giriniz  "))

while True:
    for sembol in islemler:
        print(sembol)
    
    islem = input("bir islem giriniz  ")
    sayi_2 =  float(input("ikinci bir sayi giriniz  ")) 
    cevap = islemler[islem](sayi_1,sayi_2)      
    print(f"{sayi_1} {islem} {sayi_2} = {cevap}")
    secenek = input("Bu sonucla {cevap} devam etmek istiyorsaniz 'y' yazin, yoksa 'n' yazin.  ")

    if secenek == "y":
        sayi_1 = cevap
    else:
        pass